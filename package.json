{
  "name": "@wondermoveinc/nexus-cli",
  "version": "0.0.1",
  "description": "Nexus CLI - Universal AI Bridge for Claude and Gemini",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "nexus": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "!dist/__tests__",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "npm run build && LOG_LEVEL=dev node dist/cli.js",
    "dev:info": "LOG_LEVEL=info tsx src/cli.tsx",
    "dev:silent": "LOG_LEVEL=silent tsx src/cli.tsx",
    "dev:postinstall": "npm run build && node scripts/simulate-postinstall.cjs",
    "build": "tsc",
    "postbuild": "node scripts/copy-mcp-servers.cjs",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:watch": "vitest --watch",
    "test:unit": "vitest --run src/**/*.unit.test.{ts,tsx}",
    "test:integration": "vitest --run src/**/*.integration.test.{ts,tsx}",
    "test:e2e": "vitest --run src/**/*.e2e.test.{ts,tsx}",
    "test:ci": "vitest --run --coverage --reporter=verbose --reporter=junit --outputFile=test-results.xml",
    "test:smoke": "vitest --run src/**/*.smoke.test.{ts,tsx}",
    "test:performance": "vitest --run src/**/*.perf.test.{ts,tsx}",
    "test:security": "vitest --run src/**/*.security.test.{ts,tsx}",
    "test:debug": "vitest --inspect-brk --no-coverage --reporter=verbose",
    "test:related": "vitest related",
    "test:changed": "vitest --changed",
    "test:update-snapshots": "vitest --update-snapshots",
    "audit:security": "npm audit --production",
    "check:size": "node scripts/check-package-size.js",
    "validate": "npm run lint && npm run typecheck && npm run test:run && npm run build",
    "prepublishOnly": "npm run typecheck && npm run build && npm run check:size"
  },
  "dependencies": {
    "@google/gemini-cli-core": "^0.1.9",
    "@modelcontextprotocol/sdk": "^1.15.0",
    "@types/mime-types": "^3.0.1",
    "ajv": "^8.17.1",
    "ccusage": "^15.3.1",
    "ink": "^6.0.1",
    "ink-box": "^1.0.0",
    "ink-spinner": "^5.0.0",
    "inversify": "^7.5.4",
    "lowlight": "^3.3.0",
    "mime-types": "^3.0.1",
    "react": "^19.1.0",
    "reflect-metadata": "^0.2.2",
    "string-width": "^7.1.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.8",
    "@types/react": "^19.1.8",
    "@types/sinon": "^17.0.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-dom": "^18.0.1",
    "memfs": "^4.17.2",
    "mock-fs": "^5.5.0",
    "msw": "^2.10.4",
    "nock": "^14.0.5",
    "sinon": "^21.0.0",
    "strip-json-comments": "^5.0.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "ai",
    "cli",
    "claude",
    "gemini",
    "terminal"
  ],
  "license": "MIT",
  "author": "Nexus CLI Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/sunhome243/nexus-cli.git"
  },
  "bugs": {
    "url": "https://github.com/sunhome243/nexus-cli/issues"
  },
  "homepage": "https://github.com/sunhome243/nexus-cli#readme"
}
